#!/bin/sh

set -o errexit
set -o pipefail
set -o nounset

# Check if we're in development mode by looking for mounted source code
if [ -f "/app/src/App.tsx" ] && [ -f "/app/package.json" ]; then
    echo "ðŸ”§ Development mode detected - source code is mounted"
    echo "ðŸ“¦ Installing/updating dependencies..."
    npm install
fi

exec "$@"
